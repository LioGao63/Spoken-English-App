<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wx.speaking.mapper.WordMapper">

    <select id="getWordById" resultType="com.wx.speaking.bean.Word">
        SELECT * FROM word WHERE id=#{id}
    </select>

    <update id="updateWord">
        UPDATE word
        SET
          word=#{word.word}
          video_path=#{word.videoPath}
          course_id=#{word.courseId}
          score=#{word.totalScore}
          flag=#{word.flag}
        WHERE
          id=#{word.id}
    </update>

    <select id="getAllWord" resultType="com.wx.speaking.bean.Word">
        SELECT * FROM word
    </select>
</mapper>