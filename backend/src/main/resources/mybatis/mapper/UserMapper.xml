<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wx.speaking.mapper.UserMapper">

    <select id="getUserById" resultType="com.wx.speaking.bean.User">
        SELECT * FROM userinfo WHERE id=#{id}
    </select>

    <insert id="addUser">
        INSERT INTO
        userinfo(id,userName,userSex,email,education,intro)
        VALUES
        (#{user.id},#{user.userName},#{user.userSex},#{user.email},#{user.education},#{user.intro})
    </insert>

    <update id="updateUser" >
        UPDATE userinfo
        SET
          userName = #{user.userName},
          userSex = #{user.userSex},
          email = #{user.email},
          education = #{user.education},
          intro = #{user.intro}
        WHERE id = #{user.id}
    </update>
</mapper>